{{ attach_library('speaker_profile/styles') }}

<div class="featured-speaker">
  <img alt="featured speaker image" class="featured-speaker__portrait" src="{{ content.portrait }}" />
  <div class="featured-speaker__name">{{ content.name }}</div>

  <span class="featured-speaker__label">{{ 'Topics Of Expertise:'|t }}</span>
  <div class="featured-speaker__topics">
    {% for term in content.expertise %}
      <span>{{ term }}</span>{% if not loop.last %}, {% endif %}
    {% endfor %}
  </div>
</div>
